---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout title={`Ray Luna | Page Not Found`} hidePath={true}>
    <div id="notfound" class="flex-col-2">
        <div class="container flex-col-4 md:h-[70vh] items-center justify-center">
            <div class="flex flex-col  justify-center items-center">
                <h1 class="text-[8rem] md:text-[12rem]">404</h1>
                <h2 class="font-archivo uppercase tracking-[-0.2rem] font-[100] h3">Page Not Found</h2>
            </div>
            <div class="container flex justify-center">
                <a href="/" class="btn light pt-[2rem] w-max ">Go Home</a>
            </div>
        </div>
    </div>
</PageLayout>
