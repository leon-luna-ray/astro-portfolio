---
import {
    fetchProjects,
    fetchProjectGroup,
    fetchGlobal,
    fetchProfile,
    fetchPageType,
} from "../../lib/api";

import PageLayout from "../../layouts/PageLayout.astro";
import ProjectGrid from "../../components/ProjectGrid.vue";
import TextBlock from "../../components/TextBlock.vue";

const global = await fetchGlobal();
const profile = await fetchProfile();
const projectsPage = await fetchPageType("projectsPage");
const projects = await fetchProjects();
const personalProjects = await fetchProjectGroup("personal-projects");
const portfolioProjects = await fetchProjectGroup("portfolio-projects");
const categories = [personalProjects, portfolioProjects];

if (!projects?.length) {
    return new Response(null, {
        status: 404,
        statusText: "Not found",
    });
}
---

<PageLayout
    title={`${profile?.name} | ${projectsPage.title}`}
    global={global}
    profile={profile}
    seoDescription={projectsPage?.seoDescription}
    seoImage={projectsPage?.seoImage}>
    <div class="flex-col-4 md:flex-col-6 pt-[2rem] md:pt-[4rem]">
        {
            categories.map((category) => (
                <section class="page-section flex-col-3">
                    <TextBlock
                        class="text-center text-[1.25rem]"
                        text={category.description}
                        isRichtext={true}
                        client:load
                    >
                        <h2 slot="title">{category.title}</h2>
                    </TextBlock>
                    <ProjectGrid
                        projects={category.projects}
                        minGridCols={2}
                        client:load
                    />
                </section>
            ))
        }
    </div>
</PageLayout>
